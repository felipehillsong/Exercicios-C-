        @Html.LabelFor(model => model.Servico.DiaSaida, "Dia Entrada", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input name="entrada" value="@ViewBag.DiaSaida" readonly />
            @Html.ValidationMessageFor(model => model.Servico.DiaSaida, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<p>
    @Html.ActionLink("Voltar", "Index", "Veiculo")
</p>