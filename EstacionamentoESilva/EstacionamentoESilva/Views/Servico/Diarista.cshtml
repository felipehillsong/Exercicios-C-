            <input name="entrada" value="@ViewBag.HoraEntrada" readonly />
            @Html.ValidationMessageFor(model => model.Servico.HoraEntrada, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Servico.HoraSaida, "Hora Saída", htmlAttributes: new { @class = "control-label col-md-2" })
