<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sistema de Estacionamento</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ESTACIONAMENTO E SILVA", "ServicosCadastrados", "Servico", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Cadastrar Cliente", "Create", "Cliente", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Cadastrar Veículos", "Create", "Veiculo", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Serviços", "EscolherVeiculoServico", "Veiculo", new { area = "" }, new { @class = "navbar-brand" })
                @if (@Session["nomeUsuarioLogado"].Equals(EstacionamentoESilva.Acesso.TipoUsuario.Administrador))
                {
                    @Html.ActionLink("Funcionário", "Create", "Funcionario", new { area = "" }, new { @class = "navbar-brand" })
                }
                <a class="navbar-brand">Olá @Session["nomeUsuarioLogado"]</a>
                @Html.ActionLink("Sair", "Logout", "Login", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Sistema de Estacionamento 2.0</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>